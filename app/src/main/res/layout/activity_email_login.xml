<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_login_screen_background"
    tools:context=".EmailLoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
      android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="PHOTO"
            android:textColor="#F9975E"
            android:textSize="26sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/loginX"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content"
            android:text="STAT"
            android:textColor="#5DBCD2"
            android:textSize="26sp"
            android:textStyle="bold" />



    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/splash_screen"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_horizontal"/>


    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="0dp"/>-->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvRegister"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_margin="20dp"
        android:clickable="true"
        android:focusable="true">
    <EditText
        android:id="@+id/email_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="enter email"
        android:backgroundTint="@color/colorWhite"
        android:gravity="center"
        android:textColor="#000"
        android:layout_gravity="center_vertical"
        android:textColorHint="#F9975E"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_margin="20dp"
        android:clickable="true"
        android:focusable="true">
        <EditText
            android:id="@+id/email_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="enter password"
            android:backgroundTint="@color/colorWhite"
            android:gravity="center"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:textColorHint="#F9975E"/>

    </androidx.cardview.widget.CardView>

    <!--<EditText
        android:id="@+id/email_password"
        android:layout_width="match_parent"
       android:textColorHint="#F9975E"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="Enter your password"
        android:background="@drawable/login_edit_bg"
        android:layout_margin="20dp"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password ?"
        android:layout_gravity="end"
        android:textColor="#5DBCD2"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/email_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/login_bg"
        android:textColor="#ffff"/>
    <TextView
        android:id="@+id/account_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="#5DBCD2"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Do not have an account ? Click Here"/>
    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_screen"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="62dp"/>-->

</LinearLayout>