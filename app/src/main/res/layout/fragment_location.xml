<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragments.LocationFragment">
    <TextView
        android:text="Live Photography"
        android:textSize="22dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/vpi__background_holo_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/skipPreviousBtn"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/skip_previous"
                    android:layout_width="55dp"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_height="55dp"></ImageButton>
                <ImageView
                    android:id="@+id/imageLivePhoto"
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"></ImageView>
                <ImageButton
                    android:id="@+id/skipNextBtn"
                    android:layout_weight="1"
                    android:src="@drawable/skip_next"
                    android:layout_gravity="center_vertical"
                    android:layout_width="50dp"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_height="55dp"></ImageButton>

            </LinearLayout>

       <Button
           android:id="@+id/btnCategoryTitle"
           android:text="Live Photography"
           android:layout_marginTop="30dp"
           android:textAllCaps="false"
           android:textSize="15dp"
           android:background="@android:drawable/dialog_holo_light_frame"
           android:layout_marginLeft="20dp"
           android:textColor="@color/common_google_signin_btn_text_light"
           android:layout_width="200dp"
           android:layout_height="55dp"></Button>
     </LinearLayout>

</FrameLayout>